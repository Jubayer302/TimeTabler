<EditRoom>:
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: 'LOGO'
            left_action_items: [['menu']]
            right_action_items: [['theme-light-dark',lambda x:app.theme_picker()]]

        MDBoxLayout:
            orientation: "vertical"
            spacing: '10dp'
            padding: '25dp'
            MDBoxLayout:
                size_hint_y: 0.1
                MDLabel:
                    text : 'Add New Room'
            MDBoxLayout:
                size_hint_y: 0.1
                MDTextFieldRound:
                    icon_left: "numeric"
                    hint_text: "Room No."
            MDBoxLayout:
                size_hint_y: 0.1
                MDTextFieldRound:
                    icon_left: "human-capacity-increase"
                    hint_text: "Room Capacity"
            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.1
                MDLabel:
                    text: 'Lecture'
                CheckBox:
                    group: "room_type"
                    #on_active: root.checkbox_click(self, self.active, "Lecture")
                MDLabel:
                    text: 'Lab'
                CheckBox:
                    group: "room_type"
                    #on_active: root.checkbox_click(self, self.active, "Lab")
                MDLabel:
                    text: 'Workshop'
                CheckBox:
                    group: "room_type"
                    #on_active: root.checkbox_click(self, self.active, "Workshop")
            MDBoxLayout:
                orientation: 'horizontal'
                MDBoxLayout:
                    size_hint_y: 0.1
                    MDFillRoundFlatIconButton:
                        icon: 'file-edit'
                        text: "Edit"
                        width: dp(250)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDBoxLayout:
                    size_hint_y: 0.1
                    MDFillRoundFlatIconButton:
                        icon: 'cancel'
                        text: "Cancel"
                        width: dp(250)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_release: app.change_screen('main')
            MDBoxLayout:
                text: ''