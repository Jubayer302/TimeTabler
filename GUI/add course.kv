<AddCourse>:
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: 'LOGO'
            left_action_items: [['menu']]
            right_action_items: [['theme-light-dark',lambda x:app.theme_picker()]]

        MDBoxLayout:
            orientation: "vertical"
            spacing: '10dp'
            padding: '25dp'
            MDBoxLayout:
                size_hint_y: 0.1
                MDLabel:
                    text: 'Add New Course'
            MDBoxLayout:
                size_hint_y: 0.1
                MDTextFieldRound:
                    icon_left: "account"
                    hint_text: "Course Name"
            MDBoxLayout:
                size_hint_y: 0.1
                MDTextFieldRound:
                    icon_left: "account"
                    hint_text: "Course Code"
            MDBoxLayout:
                size_hint_y: 0.1
                MDTextFieldRound:
                    icon_left: "account"
                    hint_text: "Course Credit"
            MDBoxLayout:
                size_hint_y: 0.1
                MDTextFieldRound:
                    icon_left: "account"
                    hint_text: "Course Hours"

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.1
                MDLabel:
                    text: 'Lecture'
                CheckBox:
                    group: "room_type"
                    #on_active: root.checkbox_click(self, self.active, "Lecture")
                MDLabel:
                    text: 'Lab'
                CheckBox:
                    group: "room_type"
                    #on_active: root.checkbox_click(self, self.active, "Lab")
                MDLabel:
                    text: 'Workshop'
                CheckBox:
                    group: "room_type"
                    #on_active: root.checkbox_click(self, self.active, "Workshop")
            MDBoxLayout:
                orientation: 'horizontal'
                MDBoxLayout:
                    orientation: 'vertical'
                    MDBoxLayout:
                        size_hint_y: 0.1
                        MDLabel:
                            text: 'Select Courses'
                    MDBoxLayout:

                MDBoxLayout:
                    orientation: 'vertical'
                    MDBoxLayout:
                        size_hint_y: 0.1
                        MDLabel:
                            text: 'Select Rooms'
                    MDBoxLayout:

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                MDBoxLayout:
                    MDFillRoundFlatIconButton:
                        icon: 'account-plus'
                        text: "ADD"
                        width: dp(250)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDBoxLayout:
                    MDFillRoundFlatIconButton:
                        icon: 'cancel'
                        text: "Cancel"
                        width: dp(250)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_release: app.change_screen('main')
